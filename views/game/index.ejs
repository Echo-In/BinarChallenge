<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link href="/css/game/game.css" rel="stylesheet" />
        <title>Game</title>
</head>

<body>
    <div class="container-fluid">
        <div class="d-flex flex-row playgame-header">
            <a href="/" class="back-sign align-self-center">&lt</a>
            <img src="./img/game/gamelogo.png" alt="GameLogo" class="align-self-center">
            <p class="game-title align-self-center m-0 p-1">Rock Paper Scissors
            </p>
        </div>

        <div class="row playgame-main">
            <div class="col-4 player">
                <div class="d-flex flex-row justify-content-end">
                    <div class="div my-4 player-text-div">
                        <p class="player-name">
                            <%= userName %>
                        </p>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-end">
                    <div class="div my-4 play-image-div hover-highlight" id="Batu">
                        <img src="./img/game/batu.png" alt="Batu" class="play-image">
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-end">
                    <div class="div my-4 play-image-div hover-highlight" id="Kertas">
                        <img src="./img/game/kertas.png" alt="Kertas" class="play-image">
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-end">
                    <div class="div my-4 play-image-div hover-highlight" id="Gunting">
                        <img src="./img/game/gunting.png" alt="Gunting" class="play-image">
                    </div>
                </div>
            </div>

            <div class="col-4 d-flex align-items-center justify-content-center" id="GameResult">

                <div class="vs-text" id="VSText">
                    <p>VS</p>
                </div>

                <div class="result-banner hide-banner" id="ResultBanner">
                    <p id="resultText">Player 1 Win</p>
                </div>

            </div>

            <div class="col-4 com">
                <div class="d-flex flex-row justify-content-start">
                    <div class="div my-4 player-text-div">
                        <p class="player-name">COM</p>
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-start">
                    <div class="div my-4 play-image-div" id="Batu">
                        <img src="./img/game/batu.png" alt="Batu" class="play-image">
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-start">
                    <div class="div my-4 play-image-div" id="Kertas">
                        <img src="./img/game/kertas.png" alt="Kertas" class="play-image">
                    </div>
                </div>
                <div class="d-flex flex-row justify-content-start">
                    <div class="div my-4 play-image-div" id="Gunting">
                        <img src="./img/game/gunting.png" alt="Gunting" class="play-image">
                    </div>
                </div>
            </div>
        </div>
        <div class="row playgame-footer">
            <div class="d-flex justify-content-center">
                <img src="./img/game/refresh.png" alt="Refresh" id="ResetGame" />
            </div>
        </div>
    </div>

</body>

<script src="js/game/game.js"></script>

</html>